mixin icon(id, className)
	svg(xmlns:xlink="http://www.w3.org/1999/xlink" class=className)
		use(xlink:href="#tmpl-hh__icon-" + id href="#tmpl-hh__icon-" + id)

mixin video(video, thumbnail, source="youtube")
	.video(data-video-id=video data-video-source=source)
		img.video__preview(src=thumbnail)
		.video__play-btn
			+icon('play-btn')

mixin modal(id, withCloseBtn=true)
	.modal(id=id)
		.modal__window
			if withCloseBtn
				button.modal__close-btn(type="button")
			block

mixin nav-btn
	.nav-btn
		.nav-btn__line
		.nav-btn__line
		.nav-btn__line

mixin titled-text-card(title)
	.titled-text-card 
		span.titled-text-card__plus
		span.titled-text-card__plus
		.titled-text-card__content 
			.titled-text-card__title!=title
			.titled-text-card__text 
				block

mixin partner-card(imgSrc)
	.partner-card
		span.partner-card__plus
		span.partner-card__plus
		.partner-card__content 
			.partner-card__icon-container 
				img.partner-card__img(src=imgSrc)
			